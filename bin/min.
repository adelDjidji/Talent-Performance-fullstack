#!/usr/bin/env node
var app=require("../app").app,debug=require("debug")("backend2:server"),http=require("http"),port=normalizePort(process.env.PORT||"3008");app.set("port",port);var server=require("../app").server;function normalizePort(val){var port=parseInt(val,10);return isNaN(port)?val:port>=0&&port}function onError(error){if("listen"!==error.syscall)throw error;var bind="string"==typeof port?"Pipe "+port:"Port "+port;switch(error.code){case"EACCES":console.error(bind+" requires elevated privileges"),process.exit(1);break;case"EADDRINUSE":console.error(bind+" is already in use"),process.exit(1);break;default:throw error}}function onListening(){var addr=server.address(),bind="string"==typeof addr?"pipe "+addr:"port "+addr.port;debug("Listening on "+bind)}server.listen(port),server.on("error",onError),server.on("listening",onListening);